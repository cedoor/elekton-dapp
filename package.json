{
    "name": "elekton-dapp",
    "version": "0.1.0",
    "description": "Elekton cross-platform decentralized application.",
    "homepage": "https://elekton.cedoor.dev",
    "license": "MIT",
    "author": {
        "name": "Omar Desogus",
        "email": "me@cedoor.dev",
        "url": "https://cedoor.dev"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cedoor/elekton-dapp.git"
    },
    "bugs": {
        "url": "https://github.com/cedoor/elekton-dapp/issues"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "commit": "cz",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "{src,test}/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "prettier"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "semi": false,
        "arrowParens": "always",
        "trailingComma": "none"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.7",
        "commitizen": "^4.2.3",
        "cz-conventional-changelog": "^3.3.0",
        "elekton": "../elekton.js/",
        "eslint-config-prettier": "^8.1.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    }
}
